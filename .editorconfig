root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
indent_size = 2
indent_style = tab

[*.json]
indent_size = 2
indent_style = space

[*.rs]
indent_size = 4
indent_style = space

[*.{ts,js,mts,mjs,tsx,jsx}]
indent_size = 2
indent_style = tab

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[.*rc]
indent_style = space
indent_size = 2
